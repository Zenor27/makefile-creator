{
	"name": "makefile-creator",
	"displayName": "Makefile Creator",
	"description": "Create Makefile.",
        "publisher": "zenor",
	"version": "0.0.1",
	"icon": "res/gnu.png",
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onCommand:extension.makefile-creator"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands":[
			{
				"command": "extension.makefile-creator",
				"title": "Create Makefile"
			}
		],
		"menus": 
		{
			"explorer/context": [{
				"command": "extension.makefile-creator",
				"when": "explorerResourceIsFolder",
				"title": "Create Makefile"
			}]
		},
		"configuration": {
			"type": "object",
			"title": "Makefile-Creator",
			"properties": {
				"makefile-creator.makefile_cxx": {
					"type": "string",
					"default": "g++",
					"description": "CXX"
				},
				"makefile-creator.makefile_cxxflags": {
					"type": "string",
					"default": "-Wall -Werror -Wextra -pedantic -std=c++17 -g -fsanitize=address",
					"description": "CXXFLAGS"
				},
				"makefile-creator.makefile_ldflags": {
					"type": "string",
					"default": "-fsanitize=address",
					"description": "LDFLAGS"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.1.4",
		"vscode": "^1.1.25",
		"tslint": "^5.8.0",
		"@types/node": "^8.10.25",
		"@types/mocha": "^2.2.42"
	}
}
